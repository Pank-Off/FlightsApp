<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rating_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/radioBtn_marginStart"
        android:text="@string/there_were_no_food"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/leave_feedback_title_marginStart"
        android:layout_marginTop="@dimen/leave_feedback_title_marginTop"
        android:text="@string/leave_any_feedback"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/share_your_experience_how_was_the_seat_how_was_the_food_any_tips"
        android:paddingStart="@dimen/edit_text_paddingStart"
        android:paddingEnd="@dimen/edit_text_paddingEnd"
        tools:ignore="RtlSymmetry" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitButton"
        style="@style/CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/submitBtn_margin"
        android:layout_marginEnd="@dimen/submitBtn_margin"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/submitBtn_cornerRadius" />
</LinearLayout>